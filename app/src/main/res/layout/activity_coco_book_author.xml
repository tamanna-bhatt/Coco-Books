<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CocoBookAuthorActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:id="@+id/layout3"
        android:background="@drawable/photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

        <include layout="@layout/toolbar4"/>
        </LinearLayout>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25.3dp"
            android:paddingBottom="28.3dp"
            android:layout_below="@+id/layout3"
            android:paddingLeft="17dp"
            android:background="@color/toolbarColor">
            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vladimir Nabokov"
                android:textSize="23.3dp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Literature and Fiction"
                    android:textSize="15.7dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43 Books"
                    android:textSize="13.3dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:elevation="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="230dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/circlr">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </RelativeLayout>
        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:textColor="#707070"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:lineSpacingExtra="10sp"
            android:text="Vladimir Vladimirovich Nabokov, also known by the pen
name Vladimir Sirin, was a Russian-American novelist.
Nabokov wrote his first nine novels in Russian, then "
            android:layout_marginLeft="16.7dp"
            android:layout_marginTop="16.7dp"
            />
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READ MORE"
            android:textColor="#fe571f"
            android:textSize="13.3sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#969696"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16.7dp">
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#969696"
                android:lineSpacingExtra="2.3sp"
                android:textSize="15.7sp"
                android:text="Books"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"/>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2.3sp"
                android:layout_marginRight="15.7dp"
                android:textColor="@color/toolbarColor"
                android:textSize="13.3sp"
                android:text="SHOW ALL"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="167dp"
                android:layout_height="275dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="2dp"

                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:src="@drawable/lord"
                        android:scaleType="centerCrop"
                        android:layout_margin="7.8dp"/>
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Dungeon Lord"
                        android:textColor="#454545"
                        android:layout_marginLeft="13.4dp"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="right"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="9dp"/>
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Novel "
                        android:layout_marginTop="-5dp"
                        android:textColor="#969696"
                        android:layout_marginLeft="13.4dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="167dp"
                android:layout_height="275dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="2dp"

                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:src="@drawable/the_world"
                        android:scaleType="centerCrop"
                        android:layout_margin="7.8dp"/>
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Abstract Art"
                        android:textColor="#454545"
                        android:layout_marginLeft="13.4dp"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="right"
                        android:layout_marginTop="-15dp"
                        android:layout_marginRight="9dp"/>
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Novel "
                        android:layout_marginTop="-5dp"
                        android:textColor="#969696"
                        android:layout_marginLeft="13.4dp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
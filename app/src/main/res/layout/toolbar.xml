<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100.8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    android:elevation="5dp"
    app:contentInsetEnd="0dp"
    android:background="@color/toolbarColor"
    android:id="@+id/toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.7sp"
            android:textColor="@color/white"
            android:text="COCO BOOKS"
            android:layout_marginLeft="13.5dp"
            android:lineSpacingExtra="2.7sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="13.5dp"
            android:layout_marginLeft="13.5dp"
            android:layout_marginTop="15.7dp"
            android:elevation="2dp"
            android:background="@drawable/rect_searchbar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"/>
            <customfonts.EditText_Roboto_Medium
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:paddingLeft="6.7dp"
                android:layout_weight="1"
                android:windowSoftInputMode="stateHidden"
                android:hint="Search Books, Author, Gerne"
                android:textColorHint="@color/hintColor"
                android:background="@color/transperentColor"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mike"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="18.1dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.Toolbar>
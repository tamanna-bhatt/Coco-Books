<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="1dp"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
        
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
    <RelativeLayout
        android:layout_width="165.7dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="1dp"
        android:id="@+id/layout1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:id="@+id/bookImage1"
        android:src="@drawable/tony"
        android:scaleType="centerCrop"/>
    <customfonts.TextViewSFProDisplaySemibold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Hugo Huesca Dungeon Lord"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10.7dp"/>
    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#69000000"
        android:layout_marginLeft="11dp"
        android:id="@+id/authorName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:textSize="12.3sp"
        android:text="M Methew"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="109.3dp"
        android:layout_height="25dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/frame_rect">
        <customfonts.TextViewSFProDisplaySemibold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="242/460 Pages"
            android:textSize="11.3dp"
            android:layout_gravity="center"
            android:textColor="#e5000000"/>
    </FrameLayout>
    </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
    <RelativeLayout
        android:layout_width="165.7dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="1dp"
        android:layout_alignRight="@+id/layout1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:id="@+id/bookImage"
                android:src="@drawable/dutch"
                android:scaleType="centerCrop"/>
            <customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/bookName"
                android:text="Hugo Huesca Dungeon Lord"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10.7dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#69000000"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:textSize="12.3sp"
                android:layout_weight="1"
                android:text="M Methew"/>
                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10.7sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:layout_marginRight="9dp"
                    android:textColor="#ba000000"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="2sp"
                    android:text="580 Pages"
                    />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="109.3dp"
            android:layout_height="25dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/frame_rect">
            <customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="242/460 Pages"
                android:textSize="11.3dp"
                android:layout_gravity="center"
                android:textColor="#e5000000"/>
        </FrameLayout>
    </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="165.7dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="1dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:src="@drawable/depths"
                android:scaleType="centerCrop"/>
            <customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Hugo Huesca Dungeon Lord"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10.7dp"/>


            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#69000000"
                android:textSize="12.3sp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text="M Methew"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="109.3dp"
            android:layout_height="25dp"
            android:layout_marginLeft="27dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="204dp"
            android:background="@drawable/frame_rect">
            <customfonts.TextViewSFProDisplaySemibold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="242/460 Pages"
                android:textSize="11.3dp"
                android:layout_gravity="center"
                android:textColor="#e5000000"/>
        </FrameLayout>
    </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>